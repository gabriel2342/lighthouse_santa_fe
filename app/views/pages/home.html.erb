<div class="container">
  <div class="card-body mx-auto mt-5 w-75 bg-dark text-white">
    <div class="containerd d-flex justify-content-center">
      <h1> Where are you looking for help? </h1> 
    </div>
    <div class="containerd d-flex justify-content-center">
        <%= form_with(url: '/', method: 'get', local: true) do |form| %>
          <%= form.collection_select :municipality_id, Municipality.order(:name), :id, :name %>
        <% end %>
        </div><br><br>
      




      <div class="container d-flex justify-content-center">
        <h2>What do you need help with?</h2>
      </div>
      <div class="container d-flex justify-content-center">
        <% search_params = params[:search] || []%>
        <%= form_with(url: '/', method: 'get', local: true) do %>
          <%= check_box_tag("search[]", "Long Term Housing", search_params.include?("Long Term Housing")) %> Long Term Housing <br>                                           
          <%= check_box_tag("search[]", "Shelter", search_params.include?("Shelter") ) %> Immediate Shelter <br>                                       
          <%= check_box_tag("search[]", "Finding Food", search_params.include?("Finding Food")) %> Finding Food <br>
          <%= check_box_tag("search[]", "Transportation", search_params.include?("Transportation")) %> Transportation <br>
          <%= check_box_tag("search[]", "Legal Services", search_params.include?("Legal Services")) %> Legal Services <br>
          <%= check_box_tag("search[]", "Family and Youth Services", search_params.include?("Family and Youth Services")) %> Family Services <br>                               
          <%= check_box_tag("search[]", "Mental Health Services", search_params.include?("Mental Health Services")) %> Mental Health Services <br>
          <%= check_box_tag("search[]", "Substance Use", search_params.include?("Substance Use")) %> Substance Use <br> 
          <%= check_box_tag("search[]", "Immigration or Refugee Support", search_params.include?("Immigration or Refugee Support")) %> Immigration or Refugee Support <br>
          <%= check_box_tag("search[]", "Prisoner Re-entry", search_params.include?("Prisoner Re-entry")) %> Prisoner Re-entry <br>
          <%= check_box_tag("search[]", "Domestic Violence", search_params.include?("Domestic Violence")) %> Domestic Violence <br>
          <%= check_box_tag("search[]", "Former or Current U.S. military?", search_params.include?("Former or Current U.S. military?")) %> Former or Current U.S. military? <br>
          <%= submit_tag("Search") %>
        <% end %>
      </div>

      <br><br><br>
      <div class="container d-flex justify-content-center">
        <%@service_providers.each do |provider|%>
                <%= render provider %>
        <% end %>
      </div>
    </div>
  </div>
</div>

  <br>


