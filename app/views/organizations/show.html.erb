
<div class="container bg-light w-50">
  <p style="color: white"><%= notice %></p>

  <header class="container text-center d-flex align-items-center">
   <h2><%= @organization.name%></h2>
    <div class="container d-flex justify-content-end">
      <%= turbo_frame_tag @municipality do %>
        <%= link_to "Add Municipality", 
                    new_organization_municipality_path(@organization), 
                    data: {turbo_frame: dom_id(Municipality.new)}, 
                    class: 'btn btn-primary'%>
      <% end %>
    </div>
  </header>
   <%= turbo_frame_tag Municipality.new%>
   <%= turbo_frame_tag "municipalities" do%>
      <%= render @organization.municipalities%>
      <% end %>
    
</div>
  
