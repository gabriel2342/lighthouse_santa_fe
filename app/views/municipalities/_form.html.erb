<div class="container pb-5 d-flex justify-content-center">
  <%= form_with(model: [@organization, municipality]) do |form| %>
    <% if municipality.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(municipality.errors.count, "error") %> prohibited this municipality from being saved:</h2>

        <ul>
          <% municipality.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.hidden_field :organization_id %>
    </div>

    <div>
      <%= form.label :name, style: "display: block" %>
      <%= form.text_field :name %>
    </div>

    <div>
      <%= form.submit "Update", class: "btn btn-primary mt-3"%>
      <%= link_to "Cancel", organization_path(@organization), class: "btn btn-secondary mt-3" %>
    </div>


  <% end %>
</div>
